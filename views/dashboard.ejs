            </div>

            <div class="carousel-item ">
              <div class="row g-3 mb-5 justify-content-center">
                <div class="col-12">
                  <div class="card p-3 vh-50">
                    <div class="card-title">
                      Example 3
                    </div>
                    <div class="card-body">
                      <!-- Container for ECharts chart -->
                      <div id="echartsContainer" style="height: 400px;"></div>

                      <!-- Script to render the ECharts chart -->
                      <script>
                        // Render ECharts chart based on data
                        function renderChart(data) {
                          const weeks = data.map(item => item.weekNumber);
                          const percentages = data.map(item => item.averagePercentage);

                          // Initialize ECharts instance
                          const myChart = echarts.init(document.getElementById('echartsContainer'));

                          // ECharts configuration
                          const option = {
                            title: {
                              text: 'Average Percentages by Week within the Month',
                              subtext: 'Example Chart'
                            },
                            xAxis: {
                              type: 'category',
                              data: weeks
                            },
                            yAxis: {
                              type: 'value',
                              axisLabel: {
                                formatter: '{value}%'
                              }
                            },
                            series: [{
                              data: percentages,
                              type: 'bar',
                              label: {
                                show: true,
                                formatter: '{c}%'
                              }
                            }]
                          };

                          // Set ECharts options and render chart
                          myChart.setOption(option);
                        }

                        // Fetch data from the server
                        fetch('/api/averagePercentagesByWeek')
                          .then(response => response.json())
                          .then(data => {
                            // Call the renderChart function with the received data
                            renderChart(data);
                          })
                          .catch(error => {
                            console.error('Error fetching data:', error);
                          });
                      </script>
                    </div>
                  </div>
                </div>
